= nav_bar :responsive=>true, :fixed=>:top, :brand=>"POOLOG" do
  %div.hidden-xs.hidden-sm
    = menu_group pull: :right do
      - if user_signed_in?
        = menu_text do
          = profile_img(current_user)
          = current_user.email
        %li
          %i.icon-signout
          = link_to "Logout".html_safe, destroy_user_session_path, method: :delete
      - else
        %li
          %i.icon-facebook
          = link_to "Login with Facebook".html_safe, omniauth_authorize_path('user', 'facebook')
